<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.frgDoanhThu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F16134"
                android:text="Từ ngày"
                android:id="@+id/btnDayStart"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/khung"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="0/0/0"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/edDayStart"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F16134"
                android:text="Đến ngày"
                android:id="@+id/btnDayTo"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/khung"
                android:layout_gravity="center"
                android:text="0/0/0"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:id="@+id/edDayTo"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:drawableRight="@drawable/ic_money"
            android:textColor="#000"
            android:backgroundTint="#4CAF50"
            android:text="Xem doanh thu"
            android:textStyle="bold"
            android:textSize="17dp"
            android:id="@+id/btnXemDoanhThu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/khung"
            android:minHeight="40dp"
            android:text="0 VND"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/tvDoanhThu"/>
    </LinearLayout>
</FrameLayout>